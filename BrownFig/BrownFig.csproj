<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>4techguns</Authors>
    <RepositoryUrl>https://github.com/4techguns/BrownFig</RepositoryUrl>
    <PackageIcon>brown_fig.png</PackageIcon>
    <Description>An opinionated and simple configuration framework, mainly for Discord bots.</Description>
    <PackageProjectUrl>https://github.com/4techguns/BrownFig</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="brown_fig.png" Pack="true" PackagePath=""/>
  </ItemGroup>

  <ItemGroup>
    <Content Include="brown_fig.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

</Project>
